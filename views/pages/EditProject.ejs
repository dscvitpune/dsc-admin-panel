    <link href="https://fonts.googleapis.com/css2?family=Oxygen:wght@400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
   
    <link rel="icon" type="image/png" href="images/favicon.ico"/>
    <title>DSC Admin Panel</title>
</head>
<body>
   
    <div class="editprojectform">
           
        <div>
            <form action="/projects/edit/<%= project._id %>" method="POST" enctype="multipart/form-data">
        <p  class="display-6 titl text-dark mb-4">Edit Project</p>
        <div class="form mx-auto" id="formm">
           <div class="row">
               <div class="col">
            <div class="row resp">
                <div class="col projtitle">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" value="<%= project.projectTitle %>" class="form-control" required >
                </div>
                <div class="col domain">
                    <label for="domain" class="form-label">Domain</label>
                   <div class="dropdown" style="position: unset">
                    <select name="domain" class="btn btn-dark domainselect" id="chosedomain" data-bs-toggle="dropdown">
                        <option value="" disabled hidden selected><%= project.domain%></option>
                        <option value="Web">Web</option>
                        <option value="Android">Android</option>
                        <option value="Flutter">Flutter</option>
                    </select>
                        <!-- <button class="btn btn-dark dropdown-toggle domainselect" name="domain" id="chosedomain" data-bs-toggle="dropdown" >Domain</button>
                        <ul class="dropdown-menu">
                            <li class="dropdown-item" id="item1" >Web Development</li>
                            <li class="dropdown-item" id="item2" >Android Development</li>
                            <li class="dropdown-item" id="item3" >Flutter Development</li>
                        </ul> -->
                        <!-- refer projects.js for action on selecting the domain -->
                   </div>
                   
                </div>
            </div>
            <div class="mt-3">
                <label for="description" class="form-label">Description</label><br>
                <textarea class="txtarea form-control" name="desc" id="" cols="40" rows="4" ><%= project.description %></textarea>
                <div class="row">
                    <div class="col">
                        <label for="githublink" class="form-label mt-3">GitHub</label>
                        <input type="url" name="github"  value="<%= project.githubLink%>" required class="form-control" >
                    </div>
                    <div class="col">
                        <label for="videolink" class="form-label mt-3">Video Link</label>
                        <input type="url" name="video" value="<%= project.videoLink%>" class="form-control col-md-4" >
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4 uploaddiv">
            <div class="demoimage1 h-100 text-center d-table" id="demoimg" onclick="imgupload();">
                <div class=" uploadimg align-middle d-table-cell" >
                    <img 
                    class="img-fluid"
                    src="data:image/<%=project.image.contentType%>;base64,<%=project.image.toString('base64')%>"
                    alt="<%= project.title %>"
                />
                
                <p class="txtmuted" style="font-size: 1rem;">Drag & Drop or Click to choose</p>
           
            
            <!-- </div> -->
            </div>
            <input name="image" id="imgupload" hidden type="file"/>
        </div>
        
    </div>
    <div class="row mt-5 d-flex justify-content-center" >
        <button class="btn btn-dark addproj mb-2" type="submit">Edit Project</button>
    </div>
    </div>
</div>
</form>

        </div>
        
    </div>
       <script src="/js/projects.js"></script>
